<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <appSettings>
    <add key="webpages:Version" value="3.0.0.0" />
    <add key="webpages:Enabled" value="false" />
    <add key="ClientValidationEnabled" value="true" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />

    <add key="clientBuild" value="App1" />
    <add key="theme-colour" value="background-color:#A020F0" />
    <add key="logfilePath" value="c:\\logs\\OIDC-App1.txt" />

    <add key="cookie:AuthenticationType" value="Cookies" />
    <add key="cookie:expireTimeSpanMinutes" value="1" />

    <add key="oidc:ClientId" value="[Client Id here]" />                    <!--this has to match App1:ClientId setting in AuthProxy config-->
    <add key="oidc:ClientSecret" value="[Client Secret here]" />            <!--this has to match App1:Secret setting in AuthProxy config-->
    <add key="oidc:Scope" value="openid profile sampleApi" />               <!--these scopes have to be included in IdSvr:Scope setting of AuthProxy config-->
    <add key="oidc:ResponseType" value="code id_token" />                   <!--this has to match IdSvr:ResponseType setting in AuthProxy config-->
    <add key="oidc:AuthenticationType" value="Cookies" />

    <add key="Log:StorageConnection" value="[your Azure table storage connection string here]" />

    <add key="oidc:Authority" value="[Auth Proxy Uri here]" />              <!--this has to match IdSvr:RedirectUri setting in AuthProxy config-->            
    <add key="oidc:RedirectUri" value="[this app Uri here]" />              <!--this has to match App1:RedirectUri setting in AuthProxy config-->

  </appSettings>

  <log4net debug="true">
    <!--Azure Table Appender-->
    <appender name="IdSvrAzureTableAppender" type="log4net.Appender.AzureAsync.AzureTableAppender, log4net.Appender.Azureasync">
      <bufferSize value="1" />
      <param name="TableName" value="TestLoggingIdSvr" />
      <param name="ConnectionStringName" value="Log:StorageConnection" />
      <param name="PropAsColumn" value="true" />
      <param name="PartitionKeyType" value="DateReverse" />
    <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
        <levelMax value="FATAL" />
        <acceptOnMatch value="true" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />
    </appender>

    <appender name="RollingFileAppenderDebug" type="log4net.Appender.RollingFileAppender">
      <file value="C:/Logs/Log4NetAzureTableStorage/OIDC-App1-.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyyMMdd" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>

    <root>
      <level value="ALL" />
      <!--<appender-ref ref="TraceAppender" />-->
      <appender-ref ref="IdSvrAzureTableAppender" />
      <appender-ref ref="RollingFileAppenderDebug" />
      <!--
    <appender-ref ref="RollingFileAppenderInfo" />
    <appender-ref ref="RollingFileAppenderWarn" />
    <appender-ref ref="RollingFileAppenderError" />
    <appender-ref ref="RollingFileAppenderFatal" />-->
    </root>

  </log4net>

  <system.web>
    <compilation debug="true" targetFramework="4.6.1" />
    <httpRuntime targetFramework="4.6.1" />
    <httpModules>
      <add name="ApplicationInsightsWebTracking" type="Microsoft.ApplicationInsights.Web.ApplicationInsightsHttpModule, Microsoft.AI.Web" />
    </httpModules>
  </system.web>

  <system.webServer>
    <handlers>
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      <remove name="OPTIONSVerbHandler" />
      <remove name="TRACEVerbHandler" />
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
    </handlers>
    <validation validateIntegratedModeConfiguration="false" />
    <modules>
      <remove name="ApplicationInsightsWebTracking" />
      <add name="ApplicationInsightsWebTracking" type="Microsoft.ApplicationInsights.Web.ApplicationInsightsHttpModule, Microsoft.AI.Web" preCondition="managedHandler" />
    </modules>
  </system.webServer>

